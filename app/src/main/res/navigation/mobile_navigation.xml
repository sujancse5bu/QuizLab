    app:startDestination="@+id/navigation_category">

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.sujan.quizlab.ui.category.CategoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_score"
        android:name="com.sujan.quizlab.ui.score.ScoreFragment"
        android:label="@string/title_score"
        tools:layout="@layout/fragment_score" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sujan.quizlab.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
